{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "fs:default",
    "fs:allow-open",
    "fs:allow-write",
    "fs:allow-write-file",
    "fs:write-all",
    "fs:write-files",
    "fs:allow-read",
    "fs:allow-rename",
    "fs:allow-mkdir",
    "fs:allow-remove",
    "fs:allow-write-text-file",
    "fs:scope-download-recursive",
    "fs:scope-resource-recursive",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "$DOCUMENT"
        },
        {
          "path": "$DOCUMENT/**"
        }
      ]
    }
  ]
}